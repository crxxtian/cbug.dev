---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';

type Pagination = {
	currentPage: number;
	lastPage: number;
	prevUrl: string | null;
	nextUrl: string | null;
};

type Props = {
	posts: CollectionEntry<'blog'>[];
	pagination?: Pagination;
};

const { posts, pagination } = Astro.props;
---

<section class="feed" aria-label="Posts">
	{
		posts.length === 0 ? (
			<p class="empty">No posts yet.</p>
		) : (
			<ul class="list">
				{posts.map((post) => (
					<li class="item">
						<article class="post">
							<div class="meta">
								<FormattedDate date={post.data.pubDate} />
							</div>
							<h2 class="title">
								<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
							</h2>
							<p class="description">{post.data.description}</p>
						</article>
					</li>
				))}
			</ul>
		)
	}

	{
		pagination && pagination.lastPage > 1 && (
			<nav class="pagination" aria-label="Pagination">
				{pagination.prevUrl ? (
					<a href={pagination.prevUrl}>← Newer</a>
				) : (
					<span class="disabled">← Newer</span>
				)}

				<span class="pageInfo">
					Page {pagination.currentPage} of {pagination.lastPage}
				</span>

				{pagination.nextUrl ? (
					<a href={pagination.nextUrl}>Older →</a>
				) : (
					<span class="disabled">Older →</span>
				)}
			</nav>
		)
	}
</section>

<style>
	.feed {
		margin-top: 0.25rem;
	}

	.list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 0.95rem;
	}

	.item {
		padding: 0;
	}

	.post {
		display: grid;
		gap: 0.38rem;
		padding: 0.85rem 0.9rem;
		background: color-mix(in srgb, var(--surface) 88%, var(--background));
		border-radius: 6px;
	}

	.meta {
		color: var(--muted);
		font-size: 0.76rem;
		font-family: var(--mono);
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	.title {
		margin: 0;
		font-size: 1.05rem;
		line-height: 1.35;
	}

	.title a {
		color: var(--text-primary);
		text-decoration: none;
	}

	.title a:hover {
		color: var(--accent);
	}

	.description {
		margin: 0;
		color: var(--text-secondary);
		line-height: 1.5;
		font-size: 0.97rem;
	}

	.empty {
		color: var(--text-secondary);
		font-style: italic;
	}

	.pagination {
		margin-top: 1.2rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.8rem;
		padding: 0.55rem 0 0;
		font-size: 0.88rem;
	}

	.pageInfo {
		color: var(--muted);
		white-space: nowrap;
		font-family: var(--mono);
		font-size: 0.74rem;
		letter-spacing: 0.06em;
		text-transform: uppercase;
	}

	.pagination a {
		text-decoration: none;
	}

	.disabled {
		color: var(--muted);
		opacity: 0.75;
	}

	@media (max-width: 600px) {
		.pagination {
			flex-wrap: wrap;
		}

		.pageInfo {
			order: 3;
			width: 100%;
			text-align: center;
		}
	}
</style>
