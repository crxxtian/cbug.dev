---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2 class="site-title">
			<a href="/">{SITE_TITLE}</a>
		</h2>

		<ul class="nav-links" aria-label="Primary">
			<li><HeaderLink href="/">Home</HeaderLink></li>
			<li><HeaderLink href="/blog">Blog</HeaderLink></li>
			<li><HeaderLink href="/about">About</HeaderLink></li>
		</ul>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--surface, var(--background));
		border-bottom: 1px solid var(--border);
	}

	nav {
		max-width: var(--content-width, 70ch);
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		padding: 0.25rem 0;
	}

	.site-title {
		margin: 0;
		font-size: 1em;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.site-title a {
		text-decoration: none;
		color: var(--text-primary);
		padding: 0.75em 0;
		display: inline-block;
	}

	.nav-links {
		list-style: none;
		display: flex;
		gap: 0.75em;
		margin: 0;
		padding: 0;
		flex-wrap: wrap;
		justify-content: flex-end;
	}

	.nav-links :global(a) {
		text-decoration: none;
		color: var(--text-secondary);
		padding: 0.6em 0.25em;
		border-bottom: 2px solid transparent;
		line-height: 1;
	}

	.nav-links :global(a:hover) {
		color: var(--text-primary);
	}

	.nav-links :global(a.active) {
		color: var(--text-primary);
		border-bottom-color: var(--accent);
	}

	@media (max-width: 520px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
		}
		.nav-links {
			justify-content: flex-start;
			width: 100%;
		}
	}
</style>
