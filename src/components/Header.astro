---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2 class="site-title">
			<a href="/">{SITE_TITLE}</a>
		</h2>

		<ul class="nav-links" aria-label="Primary">
			<li><HeaderLink href="/">Home</HeaderLink></li>
			<li><HeaderLink href="/blog">Blog</HeaderLink></li>
			<li><HeaderLink href="/about">About</HeaderLink></li>
		</ul>
	</nav>
</header>

<style>
	/* Old-school: no "app bar" surface. Just text + a rule. */
	header {
		margin: 0;
		padding: 0 1em;
		background: transparent;
		border-bottom: 1px solid var(--border);
	}

	nav {
		max-width: var(--content-width, 72ch);
		margin: 0 auto;
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 1rem;
		padding: 0.75rem 0;
	}

	.site-title {
		margin: 0;
		font-size: 1rem;
		font-weight: 700;
		letter-spacing: 0;
	}

	.site-title a {
		color: var(--text-primary);
		text-decoration: none;
	}

	.site-title a:hover {
		color: var(--accent);
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 0.2em;
	}

	.nav-links {
		list-style: none;
		display: flex;
		gap: 0.9rem;
		margin: 0;
		padding: 0;
		flex-wrap: wrap;
		justify-content: flex-end;
		font-family: var(--mono, ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
			"Courier New", monospace);
		font-size: 0.95rem;
	}

	/* Make nav links behave like normal links (underlined). */
	.nav-links :global(a) {
		color: var(--text-secondary);
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 0.2em;
		padding: 0;
		border: 0;
		line-height: 1.2;
	}

	.nav-links :global(a:hover) {
		color: var(--text-primary);
	}

	/* Active link = brighter text. No “tab underline.” */
	.nav-links :global(a.active) {
		color: var(--text-primary);
		text-decoration-thickness: 2px;
	}

	@media (max-width: 520px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.35rem;
		}
		.nav-links {
			justify-content: flex-start;
			width: 100%;
		}
	}
</style>
